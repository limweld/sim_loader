<?xml version="1.0" encoding="utf-8"?>

                                                           
                                               
                                                     

	
           
                                                                           
           
                                                                                              
        

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="@dimen/global_keyline_16"
		android:orientation="vertical" android:tag="layout/fragment_stock_detail_fundaments_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto">

		<TextView
			android:id="@+id/stock_detail_symbol"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="@style/TextAppearance.Stocks.Body1"
			android:tag="binding_1"                                              
			                                  
			tools:text="INTC" />

		<TextView
			android:id="@+id/stock_detail_name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="@style/TextAppearance.Stocks.Body1"
			android:tag="binding_2"                                          
			                                  
			tools:text="Intel" />

		<TextView
			android:id="@+id/stock_detail_last_price"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="@style/TextAppearance.Stocks.Body1"
			android:tag="binding_3"                                                
			                                  
			tools:text="$30.5" />

		<TextView
			android:id="@+id/stock_detail_last_change"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="@style/TextAppearance.Stocks.Body1"
			android:tag="binding_4"                                                     
			                                  
			tools:text="0.5%" />

		<TextView
			android:id="@+id/stock_detail_last_capitalization"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="@style/TextAppearance.Stocks.Body1"
			android:tag="binding_5"                                                         
			                                  
			tools:text="$2000000" />


		<ImageView
			android:id="@+id/stock_detail_chart"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:adjustViewBounds="true"
			android:scaleType="fitCenter"
			android:tag="binding_6"              />


	</LinearLayout>

         